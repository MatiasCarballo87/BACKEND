<h1>Vista de Productos</h1>

{{#if productsExist}}
    {{#each allProd}}
        <table>
            <tbody>
            <tr>
                <th>Name: </th>
                <th>Description: </th>
                <th>Price: </th>
                <th>Thumbnail: </th>
                <th>Code: </th>
                <th>Stock: </th>
                <th>Id: </th>
            </tr>
            <tr>
                <td><strong>{{this.title}}</strong></td>
                <td>{{this.description}}</td>
                <td>$ {{this.price}}</td>
                <td>{{this.thumbnail}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.id}}</td>
            </tr>
            </tbody>
        </table>    
    {{/each}}
{{else}}
    <h2>No hay Productos</h2>
{{/if}}

